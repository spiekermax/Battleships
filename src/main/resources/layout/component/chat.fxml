<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>


<fx:root type="javafx.scene.layout.VBox"
         xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml">

    <!-- Message view -->
    <AnchorPane VBox.vgrow="ALWAYS">
        <TextArea fx:id="_messageView" editable="false" focusTraversable="false" mouseTransparent="true"
                  promptText="Der Anfang einer Unterhaltung mit deinem Gegner"
                  AnchorPane.bottomAnchor="4.0" AnchorPane.leftAnchor="4.0" AnchorPane.rightAnchor="4.0" AnchorPane.topAnchor="4.0"/>
    </AnchorPane>

    <!-- Input field -->
    <AnchorPane VBox.vgrow="NEVER">
        <TextField fx:id="_inputField"
                   promptText="Schreibe eine Nachricht"
                   AnchorPane.bottomAnchor="4.0" AnchorPane.leftAnchor="4.0" AnchorPane.rightAnchor="4.0"/>
    </AnchorPane>

</fx:root>